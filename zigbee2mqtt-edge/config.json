{
  "name": "Zigbee2mqtt Edge",
  "version": "latest",
  "slug": "zigbee2mqtt_edge",
  "description": "Development build of the Zigbee2mqtt add-on",
  "uart": true,
  "url": "https://github.com/whinis/hassio-zigbee2mqtt/tree/master/zigbee2mqtt-edge",
  "startup": "application",
  "services": [
    "mqtt:need"
  ],
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "boot": "auto",
  "ingress": true,
  "panel_icon": "mdi:zigbee",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "ports": {
    "8485/tcp": 8485
  },
  "ports_description": {
    "8485/tcp": "Socat tcp-listen port"
  },
  "options": {
    "data_path": "/config/zigbee2mqtt",
    "socat": {
      "enabled": false,
      "master": "pty,raw,echo=0,link=/tmp/ttyZ2M,mode=777",
      "slave": "tcp-listen:8485,keepalive,nodelay,reuseaddr,keepidle=1,keepintvl=1,keepcnt=5",
      "options": "-d -d",
      "log": false
    },
    "mqtt": {},
    "serial": {}
  },
  "schema": {
    "zigbee_shepherd_devices": "bool?",
    "zigbee_herdsman_debug": "bool?",
    "data_path": "str",
    "socat": {
      "enabled": "bool?",
      "master": "str?",
      "slave": "str?",
      "options": "str?",
      "log": "bool?"
    },
    "mqtt": {
      "server": "str?",
      "ca": "str?",
      "key": "str?",
      "cert": "str?",
      "user": "str?",
      "password": "str?"
    },
    "serial": {
      "port": "str?",
      "adapter": "match(zstack|deconz|zigate|ezsp)?",
      "baudrate": "int?",
      "rtscts": "bool?"
    }
  },
  "image": "zigbee2mqtt/zigbee2mqtt-edge-{arch}"
}
